<%#= render "users/shared/links" %>


<div id="checkout-option" class="collapse in">
								  <div class="panel-body">
								   <div class="row">
								   	
								   	
								   
								   	<div class="col-md-6 col-sm-6 col-xs-12">					   		
								   		<h2 class="checkout-title">Sign up</h2>
								   		<p>If you don't have an account with us, please sign up.</p>
								   		<div class="xs-margin"></div>

								   		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  											<%= f.error_notification %>
								   		
										<div class="input-group">
											<span class="input-group-addon"><span class="input-icon input-icon-email"></span><span class="input-text">Email&#42;</span></span>
											<%= f.input :email, required: true,input_html: { :class => 'form-control input-lg' } , autofocus: true,placeholder:"Your Email",label: false%>
										</div><!-- End .input-group -->
										<div class="input-group xs-margin">
											<span class="input-group-addon"><span class="input-icon input-icon-password"></span><span class="input-text">Password&#42;</span></span>
											<%= f.input :password, required: true,input_html: { :class => 'form-control input-lg' },placeholder:"Your Password",label: false%>
										</div><!-- End .input-group -->

										<div class="input-group xs-margin">
											<span class="input-group-addon"><span class="input-icon input-icon-password"></span><span class="input-text">Confirm Password&#42;</span></span>
											<%= f.input :password_confirmation, required: true,input_html: { :class => 'form-control input-lg' },placeholder:"Your confirm Password",label: false%>
										</div><!-- End .input-group -->


								   		<%= f.button :submit,"Sign up", class: 'btn btn-custom-2 pull-centre' %>
								   		
										<% end %>
								   	</div><!-- End .col-md-6 -->
								   	 
								   </div><!-- End.row -->
								   
								   
								  </div><!-- End .panel-body -->
								</div><!-- End .panel-collapse -->