<!DOCTYPE html>
<html>
<head>
  <title>Letshopify</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">

    <!--header of page-->
    <header id="header">
      
        <%= render "layouts/headertop"%>
        <%= render "layouts/headerbottom"%>


    </header><!-- End #header -->


<ul class="nav nav-pills">
  <li class="active"><%=link_to "Home",root_path%></li>
  <%- if user_signed_in? %> Hello <%= current_user.email %>
    <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
    <li><li><%= link_to 'Edit profile',edit_user_registration_path %></li></li>
    
  <%-else%>  
    <li><%= link_to 'Sign in', new_user_session_path %></li>  
    <li><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %></li>
    <li><%= link_to "Sign in with Linkedin",user_omniauth_authorize_path(:linkedin) %></li>
    <!--<li><%#= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li> -->
  <%- end %>
</ul>


<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

    <!--section of page-->
    <%= yield %>

    <!--footer of page-->
    <%= render "layouts/footer"%> 

    <!--scroll top-->
    <a href="#" id="scroll-top" title="Scroll to Top"><i class="fa fa-angle-up"></i></a><!-- End #scroll-top -->
    <%= render "layouts/scriptlinks"%>
  </div><!--end of wrapper-->

</body>
</html>

